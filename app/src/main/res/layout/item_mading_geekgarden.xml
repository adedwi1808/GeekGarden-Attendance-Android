<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_240sdp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_20sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_19sdp"
    app:cardElevation="@dimen/_5sdp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imageViewMading"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:src="@drawable/rraccoon" />
        </androidx.cardview.widget.CardView>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/TextViewJudulMading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2sdp"
            android:lines="1"
            android:text="Judul Informasi"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextViewBodyMading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:justificationMode="inter_word"
            android:lines="5"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris cursus odio enim, a scelerisque tellus vulputate eu. Aliquam vitae porttitor tortor, sit amet venenatis quam. Suspendisse pharetra pulvinar nisl ut faucibus. Phasellus vitae libero ut " />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_3sdp"
                android:src="@drawable/ic_baseline_date_range_24"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/TextViewTanggalMading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22 May 2022"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>